<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:roundIcon="@mipmap/ic_launcher_logo_round"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.StudentProgressApplication"

        tools:targetApi="31"
        android:icon="@mipmap/ic_launcher_logo">
        <activity
            android:name=".UI.TermDetails"
            android:exported="false"
            android:label="Term Details"
            android:parentActivityName=".UI.TermListActivity"/>
        <activity
            android:name=".UI.TermListActivity"
            android:exported="false"
            android:parentActivityName=".UI.MainActivity"
            android:label="My Terms"/>
        <activity
            android:name=".UI.CourseListActivity"
            android:exported="false"
            android:label="Course List" />
        <activity
            android:name=".UI.MainActivity"
            android:exported="true"
            android:label="Home Page">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>