<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D1D1D1"
    tools:context=".UI.TermListActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/term_recycler"
        android:layout_width="411dp"
        android:layout_height="410dp"
        android:layout_marginTop="80dp"
        android:background="#839FCD"
        android:elevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/add_term_button"
        android:layout_width="114dp"
        android:layout_height="59dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="#834915"
        android:text="@string/add_term"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/term_recycler" />
</androidx.constraintlayout.widget.ConstraintLayout>